<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <record id="account_reports_operar_concepto_view_form" model="ir.ui.view">
            <field name="name">account_reports.operar_concepto.view.form</field>
            <field name="model">account_reports.operar_concepto</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="concepto"></field>
                            <field name="resultado_aux" />
                        </group>
                        <group string="Concepto">
                        <div>
                            <field name="concepto_r_lines">
                                <tree editable="top">
                                    <field name="concepto_id" />
                                    <field name="aritmetica_de_la_operacion" />
                                    <field name="total" />
                                </tree>
                            </field>
                        </div>
                        </group>
                        <group string="Concepto R">
                        <div>
                            <field name="concept_lines">
                                <tree editable="top">
                                    <field name="operar_concepto_id" string="Concepto R" />
                                    <field name="aritmetica_de_la_operacion" />
                                    <field name="total" />
                                </tree>
                            </field>
                        </div>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>