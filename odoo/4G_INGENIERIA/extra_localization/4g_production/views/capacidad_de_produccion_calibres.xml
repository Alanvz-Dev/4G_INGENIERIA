        <field name="model">capacidad_de_produccion.calibres_list</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                <field name="id" />
                <field name="calibre" />
                <field name="write_uid" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="4g_production.calibres_validos_act">
        <field name="name">Configuración de Calibres Válidos</field>
        <field name="res_model">capacidad_de_produccion.calibres_list</field>    
        <field name="view_mode">tree,form</field>
      </record>

</odoo>
